---
import Navigation from '@components/Navigation.astro'
// @ts-ignore
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Blog</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/blog/2023">2023 (Latest)</a>
        </li>
        <li class="submenu-item">
          <a href="/blog/2022">2022</a>
        </li>
        <li class="submenu-item">
          <a href="/blog/2021">2021</a>
        </li>
        <li class="submenu-item">
          <a href="/blog/2020">2020</a>
        </li>
        <li class="submenu-item">
          <a href="/blog/2019">2019</a>
        </li>
      </ul>
    </li>
    <li class="menu-item type-icon">
      <a href="https://github.com/munirapp" title="Visit Me on Github">
        <Icon name="raphael:github" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
